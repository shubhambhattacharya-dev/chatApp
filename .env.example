# Consolidated Environment Variables for Chat Application
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/your-database?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here-generate-with-openssl-rand-hex-64

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Server Configuration
PORT=8000
NODE_ENV=development
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api
FRONTEND_URL=http://localhost:3000